{%
  set classes = [
    'media',
    'media--type-' ~ media.bundle()|clean_class,
    not media.isPublished() ? 'media--unpublished',
    view_mode ? 'media--view-mode-' ~ view_mode|clean_class,
    'dcf-grid dcf-gap-6',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  <div class="dcf-col-67%-start">
    {{ title_suffix.contextual_links }}
    {{ content.field_media_image }}
    <div class="dcf-mt-10 dcf-txt-xs">
      {{ content.field_iptc_copyrightnotice }}
    </div>
  </div>
  <div class="dcf-col-33%-end">
    <div class="unl-bg-light-gray dcf-p-4 dcf-mb-8">
      <h2 class="dcf-txt-h4">Image Name:</h2>
      <div class="dcf-txt-lg dcf-mb-4">{{ name }}</div>
      <div class="dcf-txt-sm">To order this photo, <a href="mailto:jopp2@unl.edu">send Jordan Opp an email</a> and specify the name "<em>{{ name }}</em>".</div>
    </div>
    <div class="dcf-p-4 dcf-mb-8">
      <div class="dcf-mb-4">
        {{ content.field_iptc_datecreated }}
      </div>
      <div class="dcf-mb-4">
        {{ content.field_iptc_caption_abstract }}
      </div>
      <div class="dcf-mb-4">
        {{ content.field_iptc_keywords }}
      </div>
    </div>
  </div>
</div>
